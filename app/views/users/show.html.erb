<div class="container">
  <h1><%= "#{ User.model_name.human}" %></h1>
  <div class="form">
    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'first_name' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.first_name %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'last_name' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.last_name %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'email' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.email %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label">
        <%= User.human_attribute_name 'phone' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @user.phone %>
      </div>
    </div>
  </div>
  <p>
    <%= link_to t(".edit_user"), edit_user_registration_path(@user), class: "btn btn-primary" %>
  </p>

</div>
<div class="container-fluid">
  <h2> <%=t('.offsprings')%></h2>

  <div class="list-group list-view-pf list-view-pf-view">
    <% unless @offsprings.empty? %>
      <%= render partial: 'offspring', collection: @offsprings %>
    <% end %>
  </div>

  <div class="btn-group">
    <%= link_to t('.add_offspring'), new_offspring_path, class: "btn btn-default" %>
  </div>
</div>