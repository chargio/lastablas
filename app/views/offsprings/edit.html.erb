<div class="container-fluid">
<h2>
  <%= t '.edit_offspring', name: @offspring.full_name %>
</h2>
<%= form_for(@offspring, url: {action: "update"}) do |f| %>
    <form class="form-horizontal">
      <%= render 'layouts/form_errors', object: @offspring %>
      <div class="form-group">
        <div class="control-label">
          <%= f.label :first_name %>
        </div>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <div class="control-label">
          <%= f.label :last_name %>
        </div>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <div class="control-label">
          <%= f.label :grade %>
        </div>
        <%= f.select :grade, Offspring.grades.map { |w, _y| [I18n.t(w, scope: 'grades'), w] }, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit (t'.update'), class: "btn btn-primary btn-lg" %>
      </div>
    </form>
<% end %>
</div>