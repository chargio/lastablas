<h1><%= "#{User.model_name.human}" %></h1>
<div class="form">
  <div class="form-group">
    <div class="control-label">
      <%= User.human_attribute_name 'first_name' %>
    </div>
    <div class="form-control" disabled="<%= :disabled %>">
      <%= @user.first_name %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label">
      <%= User.human_attribute_name 'last_name' %>
    </div>
    <div class="form-control" disabled="<%= :disabled %>">
      <%= @user.last_name %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label">
      <%= User.human_attribute_name 'email' %>
    </div>
    <div class="form-control" disabled="<%= :disabled %>">
      <%= @user.email %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label">
      <%= User.human_attribute_name 'phone' %>
    </div>
    <div class="form-control" disabled="<%= :disabled %>">
      <%= @user.phone %>
    </div>
  </div>
</div>
<p>
  <%= link_to t(".edit_user"), edit_user_registration_path(@user), class: "btn btn-primary" %>
</p>
