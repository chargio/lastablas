<div class="container-fluid">
  <h2>
    <%= t '.offspring' %>
  </h2>
  <div class="form">
    <div class="form-group">
      <div class="control-label text_tag">
        <%= Offspring.human_attribute_name 'first_name' %>
      </div>
      <div class="form-control" disabled="disabled">
        <%= @offspring.first_name %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label">
        <%= Offspring.human_attribute_name 'last_name' %>
      </div>
      <div class="form-control" disabled="disabled">
        <%= @offspring.last_name %>
      </div>
    </div>
      <div class="form-group">
        <div class="control-label">
          <%= Offspring.human_attribute_name :grade %>
        </div>
        <div class="form-control" disabled="disabled">
          <%= t "grades.#{@offspring.grade}" %>
        </div>
      </div>
    </form>
  </div>
</div>

<p>
  <% if @assignment %>
    <div class="alert alert-success"> <h4><strong><%= @assignment.full_name %></strong></h4> <%= link_to t('.assign'), new_offspring_assignment_path(@offspring), class: "btn btn-warning" %></div>
  <% else %>
    <div class="alert alert-default"> <h4><strong><%= t '.no_assignment_yet' %></strong></h4> <%= link_to t('.assign'), new_offspring_assignment_path(@offspring), class: "btn btn-warning" %></div>
  <% end %>


</p>
<br>
<%= link_to t('.back'), :back, class: "btn btn-default"%>
<%= link_to t('.edit'), edit_offspring_path(@offspring), class: "btn btn-primary"%>

<%= link_to (t'.delete_offspring'), offspring_path(@offspring), class: "btn btn-danger",
data: { confirm: (t'.are_you_sure?') }, method: :delete %>