<div class="container-fluid">
  <h2>
    <%= t '.new_offspring' %>
  </h2>
  <div class="form">
    <div class="form-group">
      <div class="control-label">
        <%= Offspring.human_attribute_name 'first_name' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= offspring.first_name %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label">
        <%= Offspring.human_attribute_name 'last_name' %>
      </div>
      <div class="form-control" disabled="<%= :disabled %>">
        <%= @offspring.last_name %>
      </div>
    </div>
      <div class="form-group">
        <div class="control-label">
          <%= Offspring.human_attribute_name :grade %>
        </div>
        <%#  Offspring.grades.map { |w, _y| [I18n.t(w, scope: 'grades'), w] }, class= 'form-control' %>
      </div>
    </form>
  </div>
</div>

